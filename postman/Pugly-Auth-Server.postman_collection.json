				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.data.accessToken);",
									"    ",
									"    // Extract refresh token from cookies",
									"    const cookies = pm.cookies.all();",
									"    const refreshTokenCookie = cookies.find(cookie => cookie.name === 'refresh_token');",
									"    if (refreshTokenCookie) {",
									"        pm.environment.set('refresh_token', refreshTokenCookie.value);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{user_email}}\",\n    \"password\": \"TestPass123@\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"users",
								"login"
							]
						},
						"description": "Login with email/username and password. Returns access token and sets refresh token cookie."
					},
					"response": []
				},
